<p id="notice"></p>
<div class = "container px-5 px-sm-0">
 <div class ="row">
<%= render 'list', book: @book, user: current_user %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <% @books.each do |book| %>
   <tbody>
     <tr>
       <td>
        <p><%= image_tag book .user.get_profile_image(100,100) %></p> 
       </td>
       <td>
        <p><%= book.shop_name %></p>
       </td>
       <td>
        <p><%= book.caption %></p>
       </td>
      </tr>
   <% end %>
   </tbody>
  </table>
</div>
 </div>
</div>