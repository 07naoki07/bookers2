
<p id="notice"></p>
<div class = "container px-5 px-sm-0">
 <div class ="row">
<%= render 'list', book: @book_new, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
   <tbody>
     
     <tr>
       <td>
         <%= link_to user_path(@user) do %>
         <%= image_tag @book.user.get_profile_image(40,40) %>
         <% end %><br>
         <%= link_to @user.name, user_path(@user) %>
       </td>
       
       <td>
        <%= link_to @book.title, book_path(@book.id) %>
       </td>
       <td>
        <%= @book.body %>
       </td>
       <td>
         <div id=<%="favorite_btn_"+ @book.id.to_s %>>
         <%= render "favorites/favorite", book:@book %>
         </div>
       </td>
       <td>
        <% if @user == current_user %>
         <%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success" %>
        <% end %> 
       </td>
       <td>
        <% if @user == current_user %>
         <%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger"%>
        <% end %> 
       </td>
       <td>
        コメント件数：<%= @book.book_comments.count %>
       </td>
      </tr>
   </tbody>
  </table>
        <div id="comments_area"> 
        <%= render "book_comments/comment", book: @book %>
        </div>

       <div class="new-comment">
        <%= render "book_comments/form", book: @book,book_comment: @book_comment %>
       </div>
  </div>
 </div>
</div>



