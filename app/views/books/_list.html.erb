<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %><br>
  <table class ="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </tbody>
  </table>
  
  <div class="row">
    <% if user == current_user %>
    <p class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(user)">
      <%= link_to "プロフィール編集", edit_user_path(user) %>
    </p>
    <% end %>
  </div>
  
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    
    <div class="form-group">
    <label for="book_title">Title</label><br>
     <%= f.text_field :shop_name %>
  　</div>
  　
    <div class="form-group">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :caption %>
  　</div>
      
    <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  　</div>
  　
  <% end %>
</div>