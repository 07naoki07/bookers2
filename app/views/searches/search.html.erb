<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <th>image</th>
      <th>name</th>
      <th></th>
      <% @users.each do |user| %>
        <tr>
          <td></td>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>